generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int       @id @default(autoincrement())
  name             String
  email            String
  address          String
  phone            Int
  password         String
  created_at       DateTime  @default(now())
  updated_at       DateTime  @updatedAt
  user_type        UserType
  home             Home[]
  buyer_messages   Message[] @relation("buyer_messages")
  realtor_messages Message[] @relation("realtor_messages")
}

model Home {
  id                  Int          @id @default(autoincrement())
  address             String
  number_of_bedrooms  String
  number_of_bathrooms String
  city                String
  listed_date         DateTime     @default(now())
  price               Int
  land_size           Float
  property_type       PropertyType
  images              Images[]
  messages            Message[]
  User                User?        @relation(fields: [userId], references: [id])
  userId              Int?
}

model Message {
  id         Int      @id @default(autoincrement())
  message    String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  Home       Home?    @relation(fields: [homeId], references: [id])
  homeId     Int?
  buyer_id   Int
  buyer      User     @relation("buyer_messages", fields: [buyer_id], references: [id])
  realtor_id Int
  realtor    User     @relation("realtor_messages", fields: [realtor_id], references: [id])
}

model Images {
  id         Int      @id @default(autoincrement())
  url        String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  Home   Home? @relation(fields: [homeId], references: [id])
  homeId Int?
}

enum PropertyType {
  FLAT
  HOUSE
}

enum UserType {
  BUYER
  REALTOR
  ADMIN
}
