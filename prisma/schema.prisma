generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Home {
  id                  Int          @id @default(autoincrement())
  address             String
  number_of_bedrooms  String
  number_of_bathrooms String
  city                String
  listed_date         DateTime     @default(now())
  price               Int
  land_size           Float
  property_type       PropertyType
}

enum PropertyType {
  flat
  house
}
